<form class="profile-cohort-form" action="/profile-complete" method="post">

  <section class='profile-cohort profile-cohort--location row'>
    <header class="profile-cohort__header col-xs-12">
      <h2>Which campus did you study at?</h2>
    </header>

    <article class="location col-xs-6">
      <div class="location-image">
        <!-- <img class="location-image__img" src="" alt="Photo of London"> -->
        <input class="profile-cohort__number" name="facLocation" value="London" type="radio">
          London
        </input>
      </div>
      <!-- <p class='location__name'>London</p> -->
    </article>

    <article class="location col-xs-6">
      <div class="location-image">
        <!-- <img class="location-image__img" src="" alt="Photo of Nazareth"> -->
        <input class="profile-cohort__number" name="facLocation" value="Nazareth" type="radio">
          Nazareth
        </input>
      </div>
      <!-- <p class='location__name'>Nazareth</p> -->
    </article>
  </section>

  <section class='profile-cohort profile-cohort--cohort'>
    <header class='profile-cohort__header col-xs-12'>
      <h2>Which cohort were you on?</h2>
    </header>

    <article class="fac-cohort-number">
      <label for="fac1">FAC1</label>
      <input class="profile-cohort__number" name="facCohort" value="FAC1" type="radio" id="fac1"></input>

      <input class="profile-cohort__number" name="facCohort" value="FAC2" type="radio">FAC2</input>
      <input class="profile-cohort__number" name="facCohort" value="FAC3" type="radio">FAC3</input>
      <input class="profile-cohort__number" name="facCohort" value="FAC4" type="radio">FAC4</input>
    </article>
  </section>

  <section class="row">
    <button class="next-button" type="submit">Next</button>
  </section>

</form>
