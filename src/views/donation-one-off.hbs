{{> header}}

<h2 class="donation donation__title">Make a gift</h2>

<form class="donation donation__form" action="/payment-processor" method='post'>
  <header class="donation__header">Please select an amount</header>
  <div class="donation__container">
    <div class="donation__amount">
      <label for="100">100</label>
      <input id="100" name="amount" value="100" type="radio" required>
    </div>
    <div class="donation__amount">
      <label for="150">150</label>
      <input id="150" name="amount" value="150" type="radio">
    </div>
    <div class="donation__amount">
      <label for="200">200</label>
      <input id="200" name="amount" value="200" type="radio">
    </div>
    <div class="donation__amount">
      <label for="250">250</label>
      <input id="250" name="amount" value="250" type="radio">
    </div>
    <div class="donation__amount">
      <label for="300">300</label>
      <input id="300" name="amount" value="300" type="radio">
    </div>
    <div class="donation__amount">
      <label for="500">500</label>
      <input id="500" name="amount" value="500" type="radio">
    </div>
  </div>
